<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.layout.*?>
<StackPane fx:id="rootPane" prefWidth="700.0" stylesheets="@../css/dark-theme.css" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="com.example.home_books_javafx_spring.ui.AddBookController">
    <children>
        <AnchorPane fx:id="rootAnchorPane" prefWidth="700.0">
            <children>
                <VBox layoutY="20.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                    <children>
                        <JFXTextField fx:id="title" labelFloat="true" prefWidth="300.0" promptText="Title">
                            <VBox.margin>
                                <Insets left="20.0" right="20.0" top="20.0"/>
                            </VBox.margin>
                        </JFXTextField>
                        <HBox alignment="TOP_CENTER" prefWidth="700.0">
                            <children>
                                <AnchorPane prefWidth="700.0">
                                    <children>
                                        <JFXComboBox fx:id="comboBoxPublisher" prefWidth="300.0" promptText="Publisher" AnchorPane.leftAnchor="0.0"/>
                                        <JFXComboBox fx:id="comboBoxAuthor" layoutX="300.0" prefWidth="300.0" promptText="Author" AnchorPane.rightAnchor="0.0"/>
                                    </children>
                                </AnchorPane>
                            </children>
                            <VBox.margin>
                                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
                            </VBox.margin>
                        </HBox>
                        <HBox prefWidth="700.0">
                            <children>
                                <JFXComboBox fx:id="comboBoxRoom" prefWidth="300.0" promptText="Room">
                                    <HBox.margin>
                                        <Insets right="60.0"/>
                                    </HBox.margin>
                                </JFXComboBox>
                                <JFXComboBox fx:id="comboBoxShelf" layoutX="10.0" layoutY="10.0" prefWidth="150.0" promptText="Letter - Number">
                                    <HBox.margin>
                                        <Insets bottom="20.0" right="20.0"/>
                                    </HBox.margin>
                                </JFXComboBox>
                            </children>
                            <VBox.margin>
                                <Insets bottom="20.0" left="20.0" right="20.0" top="10.0"/>
                            </VBox.margin>
                        </HBox>
                        <HBox prefHeight="100.0" prefWidth="200.0">
                            <children>
                                <VBox alignment="CENTER">
                                    <children>
                                        <JFXComboBox fx:id="comboBoxStatusType" prefWidth="300.0" promptText="State"/>
                                    </children>
                                </VBox>
                                <JFXTextArea fx:id="comment" labelFloat="true" promptText="Comment" styleClass="text-field">
                                    <HBox.margin>
                                        <Insets bottom="20.0" left="20.0"/>
                                    </HBox.margin>
                                </JFXTextArea>
                            </children>
                            <VBox.margin>
                                <Insets bottom="20.0" left="20.0" right="20.0"/>
                            </VBox.margin>
                        </HBox>
                        <HBox alignment="CENTER" prefHeight="48.0" prefWidth="530.0" spacing="100.0">
                            <children>
                                <JFXButton fx:id="saveButton" onAction="#addBook" prefHeight="90.0" prefWidth="250.0" styleClass="app.dialog-button" text="Save"/>
                                <JFXButton fx:id="cancelButton" layoutX="10.0" layoutY="10.0" onAction="#cancel" prefHeight="70.0" prefWidth="250.0" styleClass="app.dialog-button" text="Cancel"/>
                            </children>
                            <VBox.margin>
                                <Insets bottom="20.0" left="20.0" right="20.0"/>
                            </VBox.margin>
                        </HBox>
                    </children>
                </VBox>
            </children>
        </AnchorPane>
    </children>
</StackPane>
